<div class="container">
<div class="row">
  <div class="span7">
    <h2>
      <a href="<%=url_for @workshop%>"><%=@workshop.name%></a>
    </h2>
    <p>
      <%=@workshop.description%></p>
    <h5>Prerequisites:</h5>
    <%= markdown(@workshop.requisites)%>
    <h5>Details:</h5>
    <%= markdown(@workshop.details)%>
  </div>
  <div class="span5">
    <h2>Calendar</h2>
    <%= markdown(@workshop.calendar || '')%>
    <%=render 'sharing'%>    
  </div>
</div>
</div>

<%content_for :title do%><%=@workshop.name%> : <%end%>